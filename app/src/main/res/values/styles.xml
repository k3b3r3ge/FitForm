<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circle Image View Style -->
    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:layout_margin">4dp</item>
    </style>

    <!-- Text Input Layout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="hintTextColor">@color/primary_color</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <!-- FAB Style -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="tint">@color/white</item>
        <item name="borderWidth">0dp</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- CardView Style - Removes darkening and improves appearance -->
    <!-- Using Filled style instead of Elevated to avoid darkening -->
    <style name="Theme.FitForm.CardView" parent="Widget.Material3.CardView.Filled">
        <!-- Background color for better visibility -->
        <item name="cardBackgroundColor">@color/surface_color</item>

        <!-- Aesthetic Improvements -->
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
</resources>